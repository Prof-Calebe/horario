<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>reservaServlet</servlet-name>
        <servlet-class>br.edu.horario.servlets.reservaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>disciplinaServlet</servlet-name>
        <servlet-class>br.edu.horario.servlets.disciplinaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>horarioServlet</servlet-name>
        <servlet-class>br.edu.horario.servlets.horarioServlet</servlet-class>
    </servlet>
       <servlet>
        <servlet-name>professorServlet</servlet-name>
        <servlet-class>br.edu.horario.servlets.professorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>reservaServlet</servlet-name>
        <url-pattern>/reservaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>disciplinaServlet</servlet-name>
        <url-pattern>/disciplinaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>horarioServlet</servlet-name>
        <url-pattern>/horarioServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>professorServlet</servlet-name>
        <url-pattern>/professorServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
